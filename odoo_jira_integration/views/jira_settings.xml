<odoo>
    <record model="ir.ui.view" id="jira_settings_form">
        <field name="name">jira.settings.form</field>
        <field name="model">jira.settings</field>
        <field name="arch" type="xml">
            <form string="Jira Settings">
                <group>
                    <field name="jira_url" required="1"/>
                    <field name="jira_user" required="1"/>
                    <field name="jira_api_key" widget="password" secure="1" required="1"/>
                </group>
                <button name="check_connection" string="Check Connection" type="object" class="oe_highlight"/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="jira_settings_message">
        <field name="name">jira.settings.message</field>
        <field name="model">jira.settings</field>
        <field name="arch" type="xml">
            <form string="Jira Settings">
                <h1 t-esc="message"/>
                <button name="action_back" string="Back" type="object" class="oe_highlight"/>
            </form>
        </field>
    </record>
        <!-- Menu item for Jira Settings -->
    <menuitem id="menu_jira_settings"
        name="Jira Settings"
        parent="project.menu_project_config"
        sequence="10"
        action="jira_settings_form"
        groups="base.group_user"/>

</odoo>
